jumphost:
  jumphost1:
    name: jumphost1
    datadisksize: 64
    machinesize: Standard_D1_v2
    storagtype: Standard_LRS
    tags:
      region: "{{ region }}"
      zone: jumphost
      stage: jumphost
      type: jumphost

masters:
  master1:
    name: master1
    datadisksize: 80
    machinesize: Standard_D2_v2
    storagtype: Standard_LRS
    tags:
      region: "{{ region }}"
      zone: zone1
      type: infra
      infra: "true"

infranodes:
  infranode1:
    name: infranode1
    datadisksize: 80
    machinesize: Standard_D2_v2
    storagtype: Standard_LRS
    tags:
      region: "{{ region }}"
      zone: zone1
      infra: "true"
      infratype: registry

nodes:
  node1:
    name: node1
    datadisksize: 80
    machinesize: Standard_D2_v2
    storagtype: Standard_LRS
    tags:
      region: "{{ region }}"
      zone: zone1
      infra: "false"
      stage: dev

